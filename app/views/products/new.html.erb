<h1>Add a Products</h1>
<%= link_to "Back to Products", products_url %>
<%= form_for @product do |f| %>
 <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
<p>Find me in app/views/products/new.html.erb</p>

